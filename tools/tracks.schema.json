{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "version",
    "tracks"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "tracks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "chapters"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "chapters": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "title",
                "lessons"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "lessons": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "id",
                      "title",
                      "sections",
                      "quiz",
                      "xp"
                    ],
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "sections": {
                        "type": "array"
                      },
                      "quiz": {
                        "type": "array"
                      },
                      "xp": {
                        "type": "number"
                      },
                      "takeaways": {
                        "type": "array"
                      },
                      "learnMore": {
                        "type": "array"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}